<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hotel_folio_invoice_wizard" model="ir.ui.view">
        <field name="name">hotel.folio.invoice.wizard.form</field>
        <field name="model">hotel.folio.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice by Room">
                <group string="Invoice information">
                    <group>
                        <field name="room_wizard_lines" required="1" widget="many2many_tags" domain="[('wiz','=',id)]"
                               options="{'no_create': True, 'no_create_edit':True,'no_open': True}"/>
                        <field name="folio_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="partner_filter" invisible="1"/>
                        <field name="partner_id" required="1"
                               options="{'no_create': True, 'no_create_edit':True,'no_open': True}"
                               domain="[('id','=',partner_filter)]"/>
                    </group>
                </group>
                <group>
                    <field name="service_lines" nolabel='1' options="{'no_open': '1'}">
                        <tree string="Room Services" editable="0" create="0" delete="0">
                            <field name="product_id"/>
                            <field name="room_id"/>
                            <field name="product_uom_qty"/>
                            <field name="price_unit" widget="monetary"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="price_subtotal" widget="monetary"/>
                        </tree>
                    </field>
                </group>
                <group colspan="2" class="oe_subtotal_footer oe_right">
                    <field name="amount_untaxed"
                           sum="Untaxed amount"
                           widget='monetary'/>
                    <field name="amount_tax" widget='monetary'/>
                    <div class="oe_subtotal_footer_separator oe_inline">
                        <label for="amount_total"/>
                    </div>
                    <field name="amount_total"
                           nolabel="1"
                           sum="Total amount"
                           widget='monetary'/>
                </group>
                <footer>
                    <button name="create_invoices"
                            string="Create Invoice"
                            icon="fa-ticket"
                            type="object"
                            class="oe_highlight"/>
                    <button string="Cancel"
                            icon="fa-close"
                            class="btn btn-primary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="hotel_folio_invoice_action" model="ir.actions.act_window">
        <field name="name">Create Invoice by Room</field>
        <field name="res_model">hotel.folio.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'search_default_group_by_iot_id': 1}</field>
    </record>
</odoo>