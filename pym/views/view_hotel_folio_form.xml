<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hotel_folio_form_inherit" model="ir.ui.view">
            <field name="name">hotel.folio.pym</field>
            <field name="model">hotel.folio</field>
            <field name="inherit_id" ref="hotel.view_hotel_folio_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='name']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoice" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>
                </xpath>
                <xpath expr="//field[@name='service_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="room_id"/>
                    <field name="invoice_status" readonly="True"/>
                </xpath>
                <xpath expr="//button[@name='action_done']" position="after">
                    <button attrs="{'invisible': ['|',('state', 'in', ('draft','cancel','done')), ('invoice_status', 'in', 'invoiced')]}"
                            name="open_wizard_folio_wizard" type="object" string="Create Invoice by Room"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>